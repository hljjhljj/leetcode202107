class Solution {
public:
    int islandPerimeter(vector<vector<int>>& grid) {
        int res=0;
        for(int i=0;i<grid.size();i++){
            for(int j=0;j<grid[0].size();j++){
                if(grid[i][j]==1){
                    res+=mycount(grid,i+1,j)+mycount(grid,i,j+1)+mycount(grid,i-1,j)+mycount(grid,i,j-1);
                }
            }
        }
        return res;
    }

    int mycount(vector<vector<int>>& grid,int row,int col){
        if( row<0 || row>=grid.size() || col<0 || col>=grid[row].size() || grid[row][col]==0 )
            return 1;
        return 0;
    }
};
